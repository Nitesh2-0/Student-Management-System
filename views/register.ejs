<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-900 text-white">
    <div class="max-w-md mx-auto mt-8 bg-gray-800 shadow-md rounded-md overflow-hidden">
        <div class="p-6">
            <h2 class="text-2xl font-semibold mb-6 text-center">User Registration</h2>
            <form action="/register" method="post" id="registrationForm">
                <div class="mb-4">
                    <label for="name" class="block text-sm font-medium text-white">Name</label>
                    <input type="text" id="name" name="name" class="mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 bg-gray-700 text-white" placeholder="Name" required>
                </div>
                <!-- Other input fields -->
                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-white">Email</label>
                    <input type="email" id="email" name="email" class="mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 bg-gray-700 text-white" placeholder="example@gmail.com" required>
                </div>
                <div class="mb-4">
                    <label for="phoneNumber" class="block text-sm font-medium text-white">Phone Number</label>
                    <input type="tel" id="phoneNumber" name="phoneNumber" class="mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 bg-gray-700 text-white" placeholder="e.g. +1234567890" required>
                </div>
                <div class="mb-4">
                    <label for="password" class="block text-sm font-medium text-white">Password</label>
                    <input type="password" id="password" name="password" class="mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 bg-gray-700 text-white" placeholder="Password" required>
                </div>
                <!-- Additional input field for ID number -->
                <div class="mb-4" id="idNumberField" style="display: none;">
                    <label for="idNumber" class="block text-sm font-medium text-white">ID Number</label>
                    <input type="text" id="idNumber" name="idNumber" class="mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 bg-gray-700 text-white" placeholder="ID Number" >
                </div>
                <div class="mb-6">
                    <label class="flex items-center text-white">
                        <input type="checkbox" class="form-checkbox h-5 w-5 text-blue-400" name="isAdmin" id="isAdminCheckbox">
                        <span class="ml-2 text-sm">Are you admin?</span>
                    </label>
                </div>
                <div class="flex items-center justify-center">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Register
                    </button>
                </div>
            </form>
            <div class="mt-4 text-center text-white">
                <p>Already registered? <a href="/login" class="text-blue-400 hover:text-blue-300">Login here</a></p>
            </div>
        </div>
    </div>

    <script>
        const isAdminCheckbox = document.getElementById('isAdminCheckbox');
        const idNumberField = document.getElementById('idNumberField');

        isAdminCheckbox.addEventListener('change', function() {
            if (this.checked) {
                idNumberField.style.display = 'block';
            } else {
                idNumberField.style.display = 'none';
            }
        });
    </script>
</body>
</html>
